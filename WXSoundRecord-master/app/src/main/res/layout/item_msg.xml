<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_text_receive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/base_bg_name_suffix"
           >

                <TextView
                    android:id="@+id/tv_name_suffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dp_12"
                    android:text="特曼" />

                <ImageView
                    android:id="@+id/chat_item_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <TextView
                android:id="@+id/chat_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_67"
                android:layout_marginTop="@dimen/dp_35"
                android:textColor="#999999"
                android:textSize="@dimen/dp_15"
                android:visibility="visible"
                tools:text="2021-12-13" />

            <TextView
                android:id="@+id/chat_item_show_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_67"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="#333333"
                android:textSize="@dimen/dp_15"
                android:text="奥特曼" />

            <LinearLayout
                android:id="@+id/chat_item_layout_content"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_57"
                android:layout_marginStart="@dimen/dp_67"
                android:layout_marginTop="@dimen/dp_68"
                android:layout_marginBottom="@dimen/dp_21"
                android:paddingStart="@dimen/dp_15"
                android:background="@drawable/simple_ic_voice_pop"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivAudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/audio_animation_left_list" />

                <TextView
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tvDuration"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/dp_15"
                    android:text="12''" />


            </LinearLayout>




        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:background="#F5F5F5" />
    </LinearLayout>
